
<!--ユーザープロフィール-->
<div class="profile-container">
  <h3 class="porofile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
  <!--編集ページのリンク作成-->
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
  <% end %>

</div>

<%= render'post_images/list', post_images: @post_images %>

